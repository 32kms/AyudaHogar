@page
@model AyudaHogar.Pages.MisServiciosProveedorModel

@{
    ViewData["Title"] = "Mis Servicios";
}

<div class="container mt-5">
    <h1 class="mb-4">Mis Servicios</h1>

    <p>
        <a asp-page="/CrearServicio" class="btn btn-primary">Añadir Nuevo Servicio</a>
    </p>

    @if (Model.Servicio != null && Model.Servicio.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Servicio[0].ServDetalle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Servicio[0].Cat.CatNom)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Servicio[0].Comuna.ComunaNombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Servicio[0].Prov.ProvNom)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Servicio)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServDetalle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cat.CatNom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comuna.ComunaNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prov.ProvNom)
                        </td>
                        <td>
                            <a asp-page="./DetalleServicioProveedor" asp-route-id="@item.ServId" asp-route-provId="@item.Prov.ProvId" class="btn btn-info btn-sm">Ver Detalles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="alert alert-warning">Aún no has añadido servicios para mostrar. ¡Empieza añadiendo uno nuevo!</p>
    }
</div>
