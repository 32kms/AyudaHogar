@page
@model AyudaHogar.Pages.SolicitarCategoriaModel

@{
    ViewData["Title"] = "Solicitar Categoría";
}

<div class="container mt-5">
    <h1 class="mb-4">Solicitar Nueva Categoría</h1>

    <div class="card">
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="Solicitudnuevacategorium.SncDescripcion" class="form-label">Descripción</label>
                    <input asp-for="Solicitudnuevacategorium.SncDescripcion" class="form-control" placeholder="Ingrese una descripción para la nueva categoría" />
                    <span asp-validation-for="Solicitudnuevacategorium.SncDescripcion" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Enviar Solicitud</button>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-page="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
